syntax on
filetype plugin indent on
set encoding=utf-8
set title
set hls
set is
set showcmd
set ruler
set wildmenu
set cursorline
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set number
set relativenumber

set background=dark
let g:solarized_termcolors=256
colorscheme solarized

:let mapleader = ","
inoremap jj <esc>
inoremap jk <esc>
map <silent> <C-n> :noh<CR>
map <silent> <Leader>r :set relativenumber!<CR>
